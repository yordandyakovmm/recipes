</head>
<body>
    <div class="main-layout">

        <div class="box login container-vertical">

            @if (ViewBag.user != null)
            {
                
                    <img class="container-top" src="@ViewBag.user.PictureUrl" />
                    <div class="btn-group container-bottom">
                        <a class='btn btn-primary disabled'><i class="fa fa-facebook" style="width:16px; height:17px"></i></a>
                        <a class='btn btn-primary ' href='/Login/LogOut' style="width:6em"> LogOut</a>
                    </div>
              

            }
            else
            {
                <div class="container-top">
                    <div class="btn-group">
                        <a class='btn btn-primary disabled'><i class="fa fa-facebook" style="width:16px; height:17px"></i></a>
                        <a class='btn btn-primary ' href='/Login/Facebook' style="width:6em"> LogIn  </a>
                    </div>
                </div>
            }
        </div>
        <div class="box logo">LOGO</div>
        <div class="box content">@RenderBody()</div>
        <div class="box advert">Място за вашата реклама</div>
    </div>



</body>
</html>
